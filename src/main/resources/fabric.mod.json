{
	"schemaVersion": 1,
	"id": "silkstone",
	"version": "${version}",
	"name": "Silkstone",
	"description": "Library for various tasks including creating VFX effects in Minecraft. Ported from Lodestone by SammySemicolon.",
	"authors": [
		"Bawnorton",
		"SammySemicolon"
	],
	"contact": {
		"homepage": "https://github.com/Bawnorton/Silkstone",
		"sources": "https://github.com/Bawnorton/Silkstone"
	},
	"license": "GPLv3",
	"icon": "assets/silkstone/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.bawnorton.silkstone.Silkstone"
		],
		"client": [
          "com.bawnorton.silkstone.client.SilkstoneClient"
		],
		"fabric-datagen": [
			"com.bawnorton.silkstone.data.SilkstoneDataGenerator"
		]
	},
	"mixins": [
		"silkstone.mixins.json",
		{
			"config": "silkstone.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.15.6",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
